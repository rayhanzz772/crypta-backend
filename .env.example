# ===================================
# Server Configuration
# ===================================
PORT=5000
NODE_ENV=development

# ===================================
# Database Configuration
# ===================================
DB_CONNECTION=postgres
# DB_CONNECTION=mysql

# PostgreSQL Configuration (if using postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vault_password_db
DB_USER=postgres
DB_PASS=your_password_here

# MySQL Configuration (if using mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=vault_password_db
# DB_USER=root
# DB_PASS=your_password_here

# ===================================
# JWT Configuration
# ===================================
# IMPORTANT: Use a strong, random secret key in production
# Generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ===================================
# Encryption Configuration (Optional)
# ===================================
# Additional encryption key if needed for other operations
ENCRYPTION_KEY=your_encryption_key_here

# ===================================
# Redis Configuration (if using Redis)
# ===================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ===================================
# AWS S3 Configuration (if using S3)
# ===================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=your_bucket_name

# ===================================
# Rate Limiting
# ===================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# CORS Configuration
# ===================================
# CORS_ORIGIN=http://localhost:3000
